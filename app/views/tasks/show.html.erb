<div class='container border'>
  
  
  
  <div class='row'> 
    <p class='col-2'><strong>Task </strong>:</p> 
    
    <p class='col-4'><%= @task.title %></p>
    

    <p class='col-4 text-center text-wrap text-break'  align='center' style='white-space' >
      <strong>Description</strong>:
      <br>
      <%= @task.description %>
    </p>
  </div>

  
  <br/>
  <div class='row'>
    <p class='col-3'><strong>Add Comment </strong>:</p> 
    <div class="col-12">
      <%= form_with model: [@task, @comment], local: true do |f| %>
        <div class="form-group">
          <%= f.text_area :body, rows: 5, class: 'form-control'%>
            <%= f.submit "Comment", class: 'btn btn-dark mt-3 ' %>
        </div>
        
      <% end %>
  
    </div>
  </div>
  
  
  <%= render "tasks/comment" %>

  <br>

    <div class='row'>
      <p class='col-4'></p>
      <%= link_to 'Edit task', edit_task_path(@task), class: 'text-white btn btn-primary col-2'%>
      
      <%= link_to 'Go Back', tasks_path , class: 'btn btn-secondary col-2' %>
    </div>
    <br>
    <br>
    <br> 
</div>
