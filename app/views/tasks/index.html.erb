<section class="py-3">
  
  
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title </th>
        <th>Comment </th>
        <th>Status</th> 
        <th colspan="3"> <%= link_to new_task_path() , class: "btn btn-success btn-circle" do %>
        
          <i class="fa fa-plus"></i>
        <% end %> 
      </th>
        
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td> <%= task.title %> </td>
        <td> 
          
          <% task.comments.order(body: :asc).each do |comment| %> 
                <%= comment.body %>
          <% end %>
        </td>
        <td> <%= task.status  %></td>
        <td>
            <%= link_to task_path(task), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-search"></i>
            <% end %>
            <%= link_to edit_task_path(task), class: "btn btn-warning btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to task_path(task) , class: "btn btn-danger btn-circle", method: :delete, data: {confirm: 'Are you sure?'} do %>
              <i class="fa fa-minus"></i>
            <% end %>
        </td>
        
      </tr>
      <% end %>
    </tbody>
  </table>
  
  
</section>